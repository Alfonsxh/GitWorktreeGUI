{
  "name": "git-worktree-gui",
  "productName": "Git Worktree Manager",
  "version": "1.0.3",
  "description": "A visual interface for managing Git worktrees",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --config webpack.config.js --mode development",
    "build:prod": "webpack --config webpack.config.js --mode production",
    "dev": "webpack --config webpack.config.js --watch --mode development",
    "start": "electron ./dist/main.js",
    "electron": "npm run build && npm run start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "git",
    "worktree",
    "electron",
    "gui"
  ],
  "author": "Alfons",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.4.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "css-loader": "^7.1.2",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@vscode/codicons": "^0.0.40",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "electron-store": "^10.1.0",
    "monaco-editor": "^0.53.0",
    "node-pty": "^1.0.0",
    "rc-tree": "^5.13.1",
    "react": "^19.1.1",
    "react-contexify": "^6.0.0",
    "react-dom": "^19.1.1",
    "vscode-icons-js": "^11.6.1"
  },
  "build": {
    "appId": "com.alfons.gitworktreegui",
    "productName": "Git Worktree Manager",
    "directories": {
      "output": "release"
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development",
      "icon": "assets"
    }
  }
}
